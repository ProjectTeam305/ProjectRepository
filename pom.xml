<plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-enforcer-plugin</artifactId>
    <version>3.4.0</version>
    <executions>
        <execution>
            <id>fail-intentionally</id>
            <goals>
                <goal>enforce</goal>
            </goals>
            <configuration>
                <rules>
                    <requireProperty>
                        <property>fail.build</property>
                        <message>Build failed intentionally</message>
                    </requireProperty>
                </rules>
            </configuration>
        </execution>
    </executions>
</plugin>